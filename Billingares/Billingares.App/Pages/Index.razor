@page "/{ClientId?}"

@using Billingares.Blazor

<MudGrid>
	<MudItem xs="12">
		<Billingares.Blazor.Components.ClaimsComponent />
	</MudItem>
	<MudItem xs="12">
		<Billingares.Blazor.Components.TransactionsComponent />
	</MudItem>
</MudGrid>

@code {
	[Parameter]
	public string ClientId { get; set; }

	[Inject]
	private IBillingaresApplicationState AppState { get; set; }

	protected override async Task OnParametersSetAsync()
	{
		if (!string.IsNullOrWhiteSpace(ClientId))
			AppState.ClientId = ClientId;

		await base.OnParametersSetAsync();
	}
}