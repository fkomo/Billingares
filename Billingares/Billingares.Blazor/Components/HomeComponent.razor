@using Billingares.Blazor.Shared
@using Microsoft.Extensions.Localization

@inject IStringLocalizer<Resource> localizer
@inject ApplicationState AppState

<MudLink Href="@Home" Underline="Underline.None" style="color:#f8f9fa;">
	<MudText Typo="Typo.h4" style="color:#f8f9fa;">
		<strong>@localizer["ApplicationTitle"]</strong>
	</MudText>
</MudLink>

@code
{
	private string Home => $"/{ AppState.ClientId }";
}